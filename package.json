{
  "name": "spoty",
  "version": "2.0.0",
  "description": "Modern Spotlight-like search app for Linux",
  "main": "main.js",
  "homepage": "https://github.com/Rexolt/spoty",
  "author": {
    "name": "Rexolt",
    "email": "c1e3x5eu@anonaddy.me"
  },
  "scripts": {
    "start": "LIBVA_DRIVER_NAME=nvidia electron . --disable-gpu --no-sandbox",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.lqface.spoty",
    "productName": "Linux Spotlight",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "build/icons/*"
    ],
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "build/icons", 
      "category": "Utility",
      "desktop": {
        "Name": "Spoty",
        "Comment": "Modern Spotlight-szerű kereső Linuxra",
        "Keywords": "search;launcher;spotlight;lookup;"
      }
    }
  },
  "dependencies": {
    "fuse.js": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^23.0.0"
  }
}
